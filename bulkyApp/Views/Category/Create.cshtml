@model Bulky.Models.Category


<div class=" card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class=" col-12 text-center">

            <h2 class=" text-white py-2">Create Category</h2>
        </div>
    </div>

    <div class=" card-body p-4">


        <form method="post" class="row">
            <div class=" border p-3 mt-4">
                <div class="row p-2">

                    <hr />
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for='Name' class="form-control border-0 shadow">Category Name</label>
                    <input asp-for="Name" class="mt-2" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DisplayOrder" class="form-control border-0 shadow">Display Order</label>
                    <input asp-for="DisplayOrder" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3"> <button class="btn btn-primary form-control" type="submit"
                            style="width:150px">
                            Create</button>
                    </div>

                    <div class="col-6 col-md-3"> <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control
                    " style="width:150px">Back to
                            List</a>
                    </div>
                </div>



            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}