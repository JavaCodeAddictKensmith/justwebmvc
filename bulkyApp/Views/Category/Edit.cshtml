@model bulkyApp.Model.Category




<form method="post">
    <div class=" border p-3 mt-4">
        <div class="row p-2">
            <h2 class=" text-primary">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for='Name'>Category Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3"> <button class="btn btn-primary form-control" type="submit" style="width:150px">
                    Edit</button>
            </div>

            <div class="col-6 col-md-3"> <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control
                    " style="width:150px">Back to
                    List</a>
            </div>
        </div>



    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}